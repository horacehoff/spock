EvalBlock:Expr = {
    Block<Code> => {
        Expr::EvalBlock(<>)
    }
}

LoopBlock:Expr = {
    "loop" <o1: Block<Code>> => {
        Expr::LoopBlock(o1)
    }
}

Statement: Expr = {
    ConditionalBlock => <>,
    WhileBlock => <>,
    ForLoop => <>,
    MatchBlock => <>,
    EvalBlock => <>,
    Function => <>,
    LoopBlock => <>,
    <l: Line> ";" => l,
}

Line: Expr = {
    VarDeclare => <>,
    VarAssign => <>,
    OpVarAssign => <>,
    ReturnLn => <>,
    BreakLoop => <>,
    ContinueLoop => <>,
    Expression  => <>,
}

ReturnLn: Expr = {
    "return" <e: Expression?> => Expr::ReturnVal(Box::new(e))
}

BreakLoop:Expr = {
    "break" => Expr::Break
}

ContinueLoop:Expr = {
    "continue" => Expr::Continue
}

VarDeclare: Expr = {
    "let" <v: Var> "=" <e: Expression> => Expr::VarDeclare(Intern::from(v), Box::from(e)),
}

VarAssign: Expr = {
    <v: Var> "=" <e: Expression> => Expr::VarAssign(Intern::from(v), Box::from(e)),
    <t: Term> <f: ("[" Expression "]")+> "=" <e: Expression> => Expr::ArrayModify(Box::from(t), f.iter().map(|x| x.1.clone()).collect::<Vec<Expr>>().into_boxed_slice(), Box::from(e)),
    ! => {
        error_b!(format_parser_error_recovery(<>, "VARIABLE ASSIGNMENT"));
    }
}

OpVarAssign: Expr = {
    <v: Var> "+=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Add(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
    <v: Var> "-=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Sub(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
    <v: Var> "*=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Mul(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
    <v: Var> "/=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Div(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
    <v: Var> "%=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Mod(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
    <v: Var> "^=" <e: Expression> => Expr::VarAssign(Intern::from_ref(&v), Box::from(
    Expr::Pow(
        Box::from(Expr::Var(Intern::from_ref(&v))),
        Box::from(e),
    ))),
}

IndexAccess: Expr = {
    <t: Term> <f: ("[" Expression "]")+> => {
        Expr::GetIndex(Box::from(t), f.iter().map(|x| x.1.clone()).collect::<Vec<Expr>>().into_boxed_slice())
    }
}

Expression: Expr = {
    #[precedence(level="0")]
    Term,
    IndexAccess,
    // method call
    <l:Expression> "." <f:FunctionCall> => {
        if let Expr::FunctionCall(x,y) = f {
            return Expr::ObjFunctionCall(Box::from(l),x,y);
        } else {
            unreachable!()
        }
    },

    // OPS
    #[precedence(level="1")] #[assoc(side="left")]
    <l:Expression> "||" <r:Expression> => Expr::BoolOr(Box::from(l),Box::from(r)),

    #[precedence(level="2")] #[assoc(side="left")]
    <l:Expression> "&&" <r:Expression> => Expr::BoolAnd(Box::from(l),Box::from(r)),

    #[precedence(level="3")] #[assoc(side="left")]
    <l:Expression> "==" <r:Expression> => Expr::Eq(Box::from(l),Box::from(r)),
    #[precedence(level="3")] #[assoc(side="left")]
    <l:Expression> "!=" <r:Expression> => Expr::NotEq(Box::from(l),Box::from(r)),

    #[precedence(level="4")] #[assoc(side="left")]
    <l:Expression> "<" <r:Expression> => Expr::Inf(Box::from(l),Box::from(r)),
    #[precedence(level="4")] #[assoc(side="left")]
    <l:Expression> "<=" <r:Expression> => Expr::InfEq(Box::from(l),Box::from(r)),
    #[precedence(level="4")] #[assoc(side="left")]
    <l:Expression> ">" <r:Expression> => Expr::Sup(Box::from(l),Box::from(r)),
    #[precedence(level="4")] #[assoc(side="left")]
    <l:Expression> ">=" <r:Expression> => Expr::SupEq(Box::from(l),Box::from(r)),

    #[precedence(level="5")] #[assoc(side="right")]
    <l:Expression> "^" <r:Expression> => Expr::Pow(Box::from(l),Box::from(r)),

    #[precedence(level="6")] #[assoc(side="left")]
    <l:Expression> "*" <r:Expression> => l * r,
    #[precedence(level="6")] #[assoc(side="left")]
    <l:Expression> "/" <r:Expression> => l / r,
    #[precedence(level="6")] #[assoc(side="left")]
    <l:Expression> "%" <r:Expression> => l % r,

    #[precedence(level="7")] #[assoc(side="left")]
    <l:Expression> "+" <r:Expression> => l + r,
    #[precedence(level="7")] #[assoc(side="left")]
    <l:Expression> "-" <r:Expression> => l - r,
    #[precedence(level="8")] #[assoc(side="left")]
    "-" <r:Expression> => -r,
}

Term: Expr = {
    "(" <e: Expression> ")" => e,
    <t: Num> => Expr::Num(t),
    <b: Bool> => Expr::Bool(b),
    <s: String> => Expr::String(s),
    <v: Var> => Expr::Var(Intern::from(v)),
    <a: Array> => <>,
    <f: FunctionCall> => <>,
    <c: InlineConditionalBlock> => <>,
}

ItemBefore<T,S>: T = {
    <l: T> S => l
}
ItemAfter<S,T>: T = {
    S <l: T> => l
}

FunctionCall: Expr = {
    <namespace: ItemBefore<Var, "::">+?> <o1: Var> <args: Args<Expression>> => {
        Expr::FunctionCall(args.into_boxed_slice(), {
            if let Some(ns) = namespace {
                Box::from([ns.as_slice(), &[o1]].concat())
            } else {
                Box::from(vec![String::from(o1)])
            }
        })
    }
}

Array:Expr = {
    "[" <arr: Comma<Expression>> "]" => Expr::Array(arr.into_boxed_slice())
}

Num: Num = {
    <n: r"([0-9]*[.])?[0-9]+"> => Num::from_str(n).unwrap_or_else(|_| {error_b!(format_args!("Invalid number: '{color_red}{n}{color_reset}'"));})
}

Bool: bool = {
    "true" => true,
    "false" => false,
}

String: String = {
    <s: r#"\"(?:\"\"|[^\"])*\""#> => String::from(s.trim_matches('"'))
}

Var: String = {
    <v: r#"[a-zA-Z_]*"#> => String::from(v),
}
