grammar;

match {
    r#"[\s^a_z]*"# => { },
    r"//[^\n\r]*[\n\r]*" => { }, // `// comment`
} else {_}

Comma<T>: Vec<T> = {
    <mut v:(<T> ",")*> <e:T?> => match e {
        None => v,
        Some(e) => {
            v.push(e);
            v
        }
    }
};

Args<T>: Vec<T> = {
    "(" <args: Comma<T>> ")" => args
}

Block<T>: T = {
    "{" <o1: T> "}" => o1
}


pub File:Vec<Expr> = {
    <o: Function*> => o,
}

pub Function:Expr = {
    "fn" <o1:Var> <args: Args<Var>> <o3: Block<Code>> => {
        return Expr::FunctionDecl(Box::from([&[o1], args.as_slice()].concat()), o3);
    }
}

ElseIfBlock:Expr = {
    "else" "if" <o1: Expression> <o2: Block<Code>> => Expr::ElseIfBlock(Box::from(o1), o2)
}


InlineElseIfBlock:Expr = {
    "else" "if" <o1: Expression> <o2: Block<Expression>> => Expr::ElseIfBlock(Box::from(o1), Box::from([o2]))
}

ElseBlock:Expr = {
    "else" <o2: Block<Code>> => Expr::ElseBlock(o2)
}

InlineElseBlock:Expr = {
    "else" <o2: Block<Expression>> => Expr::ElseBlock(Box::from([o2]))
}

ConditionalBlock: Expr = {
    "if" <o1: Expression> <o2: Block<Code>> <o3: ElseIfBlock*> <o4: ElseBlock?> => {
        if o1 == Expr::Bool(true) {
            return Expr::EvalBlock(o2);
        }
        Expr::Condition(
            Box::from(o1),
            Box::from(
                [&(*o2),
                o3.as_slice(),
                match o4 {
                    Some(ref value) => std::slice::from_ref(value),
                    None => &[],
                }]
            .concat()
        ))
    }
}
InlineConditionalBlock: Expr = {
    "if" <o1: Expression> <o2: Block<Expression>> <o3: InlineElseIfBlock*> <o4: InlineElseBlock?> => {
        if o1 == Expr::Bool(true) {
            return o2;
        }
        Expr::Condition(
            Box::from(o1),
            Box::from(
                [
                std::slice::from_ref(&o2),
                o3.as_slice(),
                match o4 {
                    Some(ref value) => std::slice::from_ref(value),
                    None => &[],
                }]
            .concat()
        ))
    }
}


MatchBlock:Expr = {
    "match" <o1: Expression> "{" <o2: (Expression "=>" Block<Code>)+> <o3: ("_" "=>" Block<Code>)?> "}" => {
        let match_obj = o1;
        let first_match = o2.first().unwrap();

        let mut output_code:Vec<Expr> = first_match.2.to_vec();
        output_code.extend(o2.iter().skip(1).map(|x| Expr::ElseIfBlock(
            Box::from(
                Expr::Eq(
                    Box::from(match_obj.clone()),
                    Box::from(x.0.clone())
                )
            ),
            x.2.clone()
        )));

        if let Some(wildcard) = o3 {
            output_code.push(Expr::ElseBlock(wildcard.2.clone()))
        }

        Expr::Condition(Box::from(Expr::Eq(Box::from(match_obj), Box::from(first_match.0.clone()))),Box::from(output_code))
    }
}


WhileBlock: Expr = {
    "while" <o1: Expression> <o2: Block<Code>> => Expr::WhileBlock(Box::from(o1), o2)
}

ForLoop:Expr = {
    "for" <o1:Var> "in" <o2: Expression> <o3: Block<Code>> => {
        let mut output = vec![o2];
        output.extend(o3);
        Expr::ForLoop(Intern::from(o1),output.into_boxed_slice())
    }
}

pub Code: Box<[Expr]> = {
    <s: Statement*> => s.into_boxed_slice()
}

